<?xml version='1.0' encoding='utf-8' ?>
<set android:interpolator="@android:anim/linear_interpolator"
     android:shareInterpolator="true"
     android:ordering="sequentially" xmlns:android="http://schemas.android.com/apk/res/android">
  <set android:ordering="together">
    <objectAnimator android:duration="1"
                    android:valueFrom="1.0"
                    android:valueTo="1.087"
                    android:valueType="floatType"
                    android:propertyName="scaleX" />
    <objectAnimator android:duration="1"
                    android:valueFrom="1.0"
                    android:valueTo="1.087"
                    android:valueType="floatType"
                    android:propertyName="scaleY" />
  </set>
  <set android:ordering="together">
    <objectAnimator android:duration="500"
                    android:valueFrom="1.0"
                    android:valueTo="1.304"
                    android:valueType="floatType"
                    android:propertyName="scaleX" />
    <objectAnimator android:duration="500"
                    android:valueFrom="1.0"
                    android:valueTo="1.304"
                    android:valueType="floatType"
                    android:propertyName="scaleY" />
  </set>
</set>