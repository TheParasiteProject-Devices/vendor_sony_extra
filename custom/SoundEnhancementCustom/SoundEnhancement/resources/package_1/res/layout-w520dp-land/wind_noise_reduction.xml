<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/wind_nr_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <com.sonyericsson.soundenhancement.switchbar.SwitchBar android:theme="?attr/switchBarTheme"
                        android:id="@id/switch_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="?android:attr/actionBarSize" />
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <ImageView android:id="@id/wind_nr_image"
               android:layout_width="330.0dp"
               android:layout_height="fill_parent"
               android:src="@drawable/wind_noise_reduction_image"
               android:scaleType="centerCrop" />
    <ScrollView android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
      <LinearLayout android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <TextView android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                  android:textSize="16.0sp"
                  android:gravity="center|start|top"
                  android:id="@id/description"
                  android:padding="16.0dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/sound_enhance_strings_setting_wind_noise_reduction_desc_txt"
                  android:lineSpacingMultiplier="1.2" />
        <TextView android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                  android:textSize="16.0sp"
                  android:textColor="?android:attr/colorAccent"
                  android:gravity="center|start|top"
                  android:id="@id/wind_nr_demo_description"
                  android:padding="16.0dp"
                  android:clickable="true"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/sound_enhance_strings_setting_wind_noise_reduction_demo_txt"
                  android:lineSpacingMultiplier="1.2" />
      </LinearLayout>
    </ScrollView>
  </LinearLayout>
</LinearLayout>