<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                      android:layout_height="@dimen/effect_priority_exception_app_list_item_layout_height_size" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <CheckBox android:id="@id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/effect_priority_exception_app_list_item_margin"
            android:layout_marginEnd="@dimen/effect_priority_exception_app_list_item_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
  <ImageView android:id="@id/app_icon"
             android:layout_width="@dimen/effect_priority_exception_app_list_item_icon_size"
             android:layout_height="@dimen/effect_priority_exception_app_list_item_icon_size"
             android:layout_marginStart="@dimen/effect_priority_exception_app_list_item_margin"
             android:layout_marginEnd="@dimen/effect_priority_exception_app_list_item_margin"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/checkbox"
             app:layout_constraintTop_toTopOf="parent" />
  <TextView android:textAppearance="?android:attr/textAppearanceListItem"
            android:ellipsize="end"
            android:id="@id/app_name"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:layout_marginStart="@dimen/effect_priority_exception_app_list_item_margin"
            android:layout_marginEnd="@dimen/effect_priority_exception_app_list_item_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/app_icon"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>